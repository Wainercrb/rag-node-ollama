# Server Configuration
PORT=3000
NODE_ENV=development

# Ollama Configuration
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3
EMBEDDING_MODEL=nomic-embed-text

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
